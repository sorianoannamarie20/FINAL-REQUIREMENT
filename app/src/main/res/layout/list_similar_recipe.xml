<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    android:id="@+id/similar_recipe_holder">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView_similar"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/similar_title"
            android:text="Similar Name"
            android:textStyle="bold"
            android:textColor="@color/bronze"
            android:padding="8dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_servings"/>

        <TextView
            android:id="@+id/similar_servings"
            android:text="Similar Name"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_access_time_filled_24"/>


        <TextView
            android:id="@+id/similar_time"
            android:text="Similar Name"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />



    </LinearLayout>

</androidx.cardview.widget.CardView>